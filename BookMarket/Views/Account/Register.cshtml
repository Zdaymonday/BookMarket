@model RegisterViewModel

<div class="register-form-wrapper">
    <div class="register-form-container">
        <div class="registration-text">
            Регистрация
        </div>
        <form class="register-form" asp-action="Register" method="post">  
            <div asp-validation-summary="ModelOnly"></div>
            <span asp-validation-for="Name"></span>
            <input asp-for="Name" placeholder="Имя" />

            <span asp-validation-for="Email"></span>
            <input asp-for="Email" placeholder="Адрес эл. почты" />

            <span asp-validation-for="Password"></span>
            <input asp-for="Password" placeholder="Пароль"/>

            <span asp-validation-for="ConfirmPassword"></span>
            <input asp-for="ConfirmPassword" placeholder="Подтверждение" />

            <input class="register-submit-input" type="submit" value="Зарегистрировать" />
            <a asp-action="Login" asp-controller="Account">Отмена</a>
        </form>
    </div>
</div>
