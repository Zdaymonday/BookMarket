@model LoginViewModel

<div class="login-form-wrapper">
    <div class="login-image-container">
        <img src="/image/login-image2_full-size.png" />
    </div>
    <div class="login-form-container">
        <div class="form-wrapper">
            <form asp-action="Login" asp-controller="Account" method="post">
                <div class="login-password">
                    <div asp-validation-summary="ModelOnly"></div>
                    <input asp-for="UserName" placeholder="Имя пользователя" />
                    <span asp-validation-for="UserName"></span>
                    
                    <input asp-for="Password"  placeholder="Пароль" />
                    <span asp-validation-for="Password"></span>                                        
                </div>
                <div class="login-form-buttons">
                    <input type="submit" value="Вход" />
                    <a asp-action="RecoverForm" asp-controller="Account">Забыли Пароль?</a>
                    <div class="separator-block"></div>
                    <a asp-action="Register" asp-controller="Account">Зарегистрироваться</a>
                </div>
            </form>
        </div>        
    </div>
</div>
